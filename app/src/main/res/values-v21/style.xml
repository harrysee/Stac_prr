<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/pp_green</item>
        <item name="colorPrimaryDark">@color/pp_green</item>
        <item name="colorAccent">@color/pp_green</item>
        <item name="android:timePickerStyle">@style/PickerMode</item>
    </style>

    <style name="PickerMode" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/pp_green</item>
        <item name="colorPrimaryDark">@color/pp_green</item>
        <item name="colorAccent">@color/pp_green</item>
        <item name="android:datePickerMode">@style/DatePickerMode</item>
    </style>
    <style name="DatePickerMode" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>