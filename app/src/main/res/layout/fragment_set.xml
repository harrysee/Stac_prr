<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    tools:context=".Fragment.SetFragment">

    <LinearLayout
        android:id="@+id/set_top_bar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="설정"
            android:textColor="@color/pp_green"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_linear_alarm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/set_top_bar"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/set_alarm"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Switch
            android:id="@+id/set_switch_alarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="240dp"
            android:checked="false"
            android:theme="@style/set_switch" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_linear_nugu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/set_linear_alarm"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/set_nugu"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/set_imgbtn_nugu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@color/transparent"
            android:padding="20dp"
            android:paddingLeft="100dp"
            android:src="@drawable/ic_gray_pass" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_linear_iot"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/set_linear_nugu"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/set_iot"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/set_imgbtn_iot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@color/transparent"
            android:padding="20dp"
            android:src="@drawable/ic_gray_pass" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_linear_notice"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/set_linear_iot"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/set_notice"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/set_imgbtn_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@color/transparent"
            android:padding="20dp"
            android:src="@drawable/ic_gray_pass" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_linear_ask"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/set_linear_notice"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/set_ask"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/set_imgbtn_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@color/transparent"
            android:padding="20dp"
            android:src="@drawable/ic_gray_pass" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_linear_rule"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal"
        android:layout_below="@+id/set_linear_ask"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="@string/set_rule"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/set_imgbtn_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical|right"
            android:padding="20dp"
            android:src="@drawable/ic_gray_pass" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_linear_version"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shape_set_linear"
        android:orientation="horizontal"
        android:layout_below="@+id/set_linear_rule"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="@string/set_version"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/set_imgbtn_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical|right"
            android:padding="20dp"
            android:src="@drawable/ic_gray_pass" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/set_linear_version"
        android:background="@color/back_gray"/>

</RelativeLayout>