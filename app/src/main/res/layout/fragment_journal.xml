<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_gray"
    tools:context=".Fragment.JournalFragment"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="일지"
            android:textColor="@color/pp_green"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/up_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:backgroundTint="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_up_btn" />
        <ImageButton
            android:id="@+id/down_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:background="@color/back_gray"
            android:backgroundTint="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_down_btn" />
        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="15.83dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:background="@color/back_gray"
            android:backgroundTint="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_bookmark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/set_bg"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜순↓"
            android:textSize="12sp"
            android:textColor="@color/day_gray"
            android:layout_gravity="center"
            android:layout_marginLeft="320dp"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/journal_recycler"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation ="vertical"
        tools:listitem="@layout/journal_item"
        app:layout_constraintTop_toBottomOf="@+id/linear2">

    </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="48dp"
        app:fab_shadow="false"
        android:layout_gravity="end|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:backgroundTint="@color/pp_green"
        android:src="@drawable/ic_baseline_add"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>